<widget xmlns="http://www.w3.org/ns/widgets" 
		xmlns:gap="http://phonegap.com/ns/1.0"
		id="com.vivit.worldwide.mobile.poc"
		version="1.0.0"
		android-versionCode="170700" 
		ios-CFBundleVersion="170700">


	<!--===============================================================================
	 | PhoneGap information.
	 ================================================================================-->

	<name>Vivit Mobile POC</name>
	<description>Proof of concept app to experiment with getting the technologies in place.</description>
	<author email="IT.Support@vivit-worldwide.org" href="http://www.vivit-worldwide.org">Vivit Worldwide</author>
	<content src="index.html" />


	<!--===============================================================================
	 | General mobile device preferences.
	 ================================================================================-->
    <preference name="phonegap-version"           value="cli-6.5.0" />		<!-- all: current version of PhoneGap -->
    <preference name="orientation"                value="default" />		<!-- all: default means both landscape and portrait are enabled -->
    <preference name="target-device"              value="universal" />		<!-- all: possible values handset, tablet, or universal -->
    <preference name="fullscreen"                 value="false" />			<!-- all: hides the status bar at the top of the screen -->


	<!--===============================================================================
	 | Android specific preferences.
	 ================================================================================-->
	<platform name="android">
		<preference name="android-targetSdkVersion" value="25" />			<!-- android: MIN SDK version supported on the target device. MAX version is blank by default. -->
		<preference name="android-installLocation" value="auto" />			<!-- android: app install location. 'auto' will choose. 'internalOnly' is device memory. 'preferExternal' is SDCard. -->
		<preference name="android-build-tool" value="gradle" />				<!-- required for pushwoosh plugin -->
	</platform>


	<!--===============================================================================
	 | iOS specific preferences.
	 ================================================================================-->
	<platform name="ios"/>


	<!--===============================================================================
	 | PhoneGap/Cordova Core plugins.
	 ================================================================================-->
	<plugin name="cordova-plugin-inappbrowser" spec="~1.7.0" />
	<plugin name="cordova-plugin-splashscreen" spec="~4.0.2" />
	<plugin name="cordova-plugin-whitelist" spec="~1.3.2" />


	<!--===============================================================================
	 | Other plugins.
	 ================================================================================-->
    <gap:plugin name="pushwoosh-pgb-plugin" source="npm" />
	

	<!--===============================================================================
	 | Icons for each platform.
	 ================================================================================-->
    <icon src="www/icon.png" />
    <icon src="www/res/icon/android/icon-36-ldpi.png"	gap:platform="android"	gap:density="ldpi" />
    <icon src="www/res/icon/android/icon-48-mdpi.png"	gap:platform="android"	gap:density="mdpi" />
    <icon src="www/res/icon/android/icon-72-hdpi.png"	gap:platform="android"	gap:density="hdpi" />
    <icon src="www/res/icon/android/icon-96-xhdpi.png"	gap:platform="android"	gap:density="xhdpi" />


	<!--===============================================================================
	 | Splash screens for each platform.
	 ================================================================================-->
    <gap:splash src="www/res/screen/android/screen-ldpi-portrait.png"	gap:platform="android"	gap:density="ldpi" />
    <gap:splash src="www/res/screen/android/screen-mdpi-portrait.png"	gap:platform="android"	gap:density="mdpi" />
    <gap:splash src="www/res/screen/android/screen-hdpi-portrait.png"	gap:platform="android"	gap:density="hdpi" />
    <gap:splash src="www/res/screen/android/screen-xhdpi-portrait.png"	gap:platform="android"	gap:density="xhdpi" />


	<!--===============================================================================
	 | Whitelisted URLs.
	 ================================================================================-->
	<allow-navigation href="http://www.vivit-worldwide.org/*"/>
	<allow-navigation href="https://vivitworldwide.site-ym.com/*"/>
	<allow-navigation href="http://c.ymcdn.com/*"/>

	<access origin="*" />
</widget>
