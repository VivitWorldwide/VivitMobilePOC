<widget xmlns="http://www.w3.org/ns/widgets" 
		xmlns:gap="http://phonegap.com/ns/1.0"
		id="com.vivit.worldwide.mobile.poc"
		version="1.0.0"
		android-versionCode="170680" 
		ios-CFBundleVersion="170680">


	<!--===============================================================================
	 | PhoneGap information.
	 ================================================================================-->

	<name>Vivit Mobile POC</name>
	<description>Proof of concept app to experiment with getting the technologies in place.</description>
	<author email="IT.Support@vivit-worldwide.org" href="http://www.vivit-worldwide.org">Vivit Worldwide</author>
	<content src="index.html" />
	<access origin="*" />


	<!--===============================================================================
	 | Need to figure out how to make the icons platform specific.
	 ================================================================================-->
    <icon src="www/platforms/android/icon/vivit_logo_hdpi.png" />


	<!--===============================================================================
	 | Android specific preferences.
	 ================================================================================-->
	<platform name="android">
		<preference name="android-targetSdkVersion" value="25"/>
	</platform>


	<!--===============================================================================
	 | iOS specific preferences.
	 ================================================================================-->
	<platform name="ios"/>


	<!--===============================================================================
	 | PhoneGap/Cordova plugins.
	 ================================================================================-->
    <plugin name="cordova-plugin-inappbrowser" spec="https://github.com/apache/cordova-plugin-inappbrowser"/>
	<plugin name="cordova-plugin-whitelist" spec="https://github.com/apache/cordova-plugin-whitelist"/>
	<gap:plugin name="org.apache.cordova.splashscreen" />
	
    <gap:splash src="images/screen-ldpi-portrait.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="images/screen-mdpi-portrait.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="images/screen-hdpi-portrait.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="images/screen-xhdpi-portrait.png" gap:platform="android" gap:density="xhdpi" />


	<!--===============================================================================
	 | Whitelisted URLs.
	 ================================================================================-->
	<allow-navigation href="http://www.vivit-worldwide.org/*"/>
	<allow-navigation href="https://vivitworldwide.site-ym.com/*"/>
	<allow-navigation href="http://c.ymcdn.com/*"/>

</widget>
